<%- include('partials/header') %>

    <div class="container-fluid text-center">
        <h1 data-aos="slide-right">Search results for
            <span id="results_head">
                <%= query %>
            </span>
        </h1>
        <form action="/" method="GET">
            <div class="form-row align-items-center">
                <div data-aos="slide-left" class="col-auto">
                    <input type="text" class="mx-auto form-control mb-2 w-50" id="inlineFormInput" placeholder="Type Movie" name="search">
                </div>
                <div data-aos="fade-in" class="col-auto">
                    <button type="submit" class="btn bubbly-button px-4">Search</button>
                </div>
            </div>
        </form>

        <div class="container">
            <div class="row">
                <% if(data["Response"].toLowerCase() === "true"){ %>
                    <!-- <p>Welcome Code_Breaker!</p> -->
                    <% data["Search"].forEach(function(movie){ %>
                        <div data-aos="zoom-in-up" class="col-lg-3 col-sm-6">
                            <div class="card-deck p-0 m-2">
                                <div class="card">
                                    <img class=" card-img-top img-fluid rounded mx-auto d-block" src="<%= movie.Poster %>" alt="Card image cap Responsive image">
                                    <div class="card-body text-dark">
                                        <h5 class="card-title">
                                            <%= movie.Title %>
                                        </h5>
                                        <p class="card-text">Year -
                                            <%= movie.Year  %>
                                        </p>
                                        <p id="imdbid" class="card-text">Type
                                            <%= movie.Type  %>
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <form action="/id" method="GET">
                                            <input type="hidden" id="idFormInput" name="imdbid" value="<%= movie.imdbID  %>">
                                            <button type="submit" class="btn btn-dark">View More Details</button>
                                        </form>
                                    </div>
                                </div>
                            </div>


                        </div>

                        <% }) %>
                            <% } else { %>
                                <p>Results not found, please check spelling</p>
                                <!-- <script>
                                    window.location.href = '404';
                                </script> -->
                                <% } %>
            </div>
        </div>
    </div>



    <%- include('partials/footer') %>