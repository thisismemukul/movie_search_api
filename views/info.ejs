<%- include('partials/header') %>
    <div class="container-fluid text-center">
        <h1 data-aos="slide-right">Search Another Movie</h1>
        <form action="/" method="GET">
            <div class="form-row align-items-center">
                <div data-aos="slide-left" class="col-auto">
                    <input type="text" class="mx-auto form-control mb-2 w-50" id="inlineFormInput" placeholder="Type Movie" name="search">
                </div>
                <div data-aos="fade-in" class="col-auto">
                    <button type="submit" class="btn bubbly-button px-4">Search</button>
                </div>
            </div>
        </form>
    </div>


    <div class="container">
        <div class="row">
            <% if(data["Response"].toLowerCase() === "true"){ %>
                <!-- <p>Welcome Code_Breaker!</p> -->
                <div class="jumbotron">
                    <h1 data-aos="fade-in" class="display-4 text-center font-weight-bold">
                        <strong><span id="results_head"> <%= data.Title %></span></strong>
                    </h1>
                    <p class="text-center">
                        Released Date -
                        <strong> <%= data.Released %></strong>
                    </p>

                    <div class="row justify-content-center">
                        <div data-aos="slide-up" class="col-lg-3 col-sm-12">
                            <div class="card-deck p-0 m-2">
                                <div class="card">
                                    <img class=" card-img-top img-fluid rounded mx-auto d-block" src="<%= data.Poster %>" alt="Card image cap Responsive image">
                                    <div class="card-footer">
                                        <form method="get" action="//www.google.com/search" target="_blank">
                                            <input type="hidden" name="q" value="<%= data.Title  %>">
                                            <button type="submit" class="btn btn-dark">Search on Google</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div data-aos="slide-left" class="col-lg-9 col-sm-12">
                            <div class="card-deck p-0 m-2">
                                <div class="card border-none bg-card text-white">
                                    <div class="card-body  bg-card">
                                        <h5 class="card-title">
                                            <%= data.Title %>
                                        </h5>
                                        <p class="card-text">

                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item bg-card text-white">
                                                    <span id="results_head">Type -</span>
                                                    <%= data.Type  %>
                                                </li>
                                                <li class="list-group-item bg-card text-white">
                                                    <span id="results_head">IMDB Rating -</span>
                                                    <%= data.imdbRating  %>
                                                </li>
                                                <li class="list-group-item bg-card text-white">
                                                    <span id="results_head">Year -</span>
                                                    <%= data.Year  %>
                                                </li>
                                                <li class="list-group-item bg-card text-white">
                                                    <span id="results_head">Rated -</span>
                                                    <%= data.Rated  %>
                                                </li>
                                                <li class="list-group-item bg-card text-white">
                                                    <span id="results_head">Runtime -</span>
                                                    <%= data.Runtime  %>
                                                </li>
                                                <li class="list-group-item bg-card text-white">
                                                    <span id="results_head">Genre -</span>
                                                    <%= data.Genre  %>
                                                </li>
                                                <li class="list-group-item bg-card text-white">
                                                    <span id="results_head">Language -</span>
                                                    <%= data.Language  %>
                                                </li>
                                            </ul>



                                        </p>

                                        <hr>
                                        <p class="card-text">
                                            <span id="results_head">Director -</span>
                                            <%= data.Director  %>
                                        </p>
                                        <p class="card-text">
                                            <span id="results_head">Writer -</span>
                                            <%= data.Writer  %>
                                        </p>
                                        <p class="card-text">
                                            <span id="results_head">Actors -</span>
                                            <%= data.Actors  %>
                                        </p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <div class="row">
                        <div data-aos="slide-right" class="col-lg-4 col-sm-12">
                            <div class="card-deck p-0 m-2">
                                <div class="card border-none bg-card text-white">
                                    <div class="card-body  bg-card">
                                        <h5 class="card-title">
                                            More Info
                                        </h5>
                                        <p class="card-text">
                                            <span id="results_head">Awards -</span>
                                            <%= data.Awards  %>
                                        </p>
                                        <p class="card-text">
                                            <span id="results_head">BoxOffice -</span>
                                            <%= data.BoxOffice  %>
                                        </p>
                                        <p class="card-text">
                                            <span id="results_head">Production -</span>
                                            <%= data.Production  %>
                                        </p>
                                        <p class="card-text">
                                            <span id="results_head">imdbVotes -</span>
                                            <%= data.imdbVotes  %>
                                        </p>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div data-aos="flip-left" class="col-lg-6 col-sm-12">
                            <div class="card-deck p-0 m-2">
                                <div class="card border-none bg-card text-white">
                                    <div class="card-body  bg-card">
                                        <h5 class="card-title">
                                            Ratings
                                        </h5>

                                        <% data["Ratings"].forEach(function(rate){ %>
                                            <p class="card-text">
                                                <span id="results_head">Source -</span>
                                                <%= rate.Source  %>
                                                    <span id="results_head"><%= rate.Value  %> </span>

                                            </p>
                                            <% }) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div data-aos="flip-left" class="col-lg-12 col-sm-12">
                        <div class="card-deck p-0 m-2">
                            <div class="card border-none bg-card text-white">
                                <div class="card-body  bg-card">
                                    <h5 class="card-title">
                                        <span id="results_head">Storyline</span>
                                    </h5>
                                    <p class="lead text-left">
                                        <%= data.Plot %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                </div>








                <% } else { %>
                    <p>Results not found, please try again</p>
                    <script>
                        window.location.href = '404';
                    </script>
                    <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>